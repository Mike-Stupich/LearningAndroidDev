<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity3">
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etSurname" android:layout_marginLeft="20dp" android:layout_marginTop="10dp"
            android:layout_marginRight="20dp" android:hint="@string/please_enter_your_surname"
            android:gravity="center_horizontal" android:importantForAutofill="no"/>
    <Button
            android:text="@string/submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/btnSubmit" android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp" android:layout_marginRight="20dp" android:textStyle="bold"
            android:textColor="#FFFFFF" android:background="@color/colorPrimary"/>
    <Button
            android:text="@android:string/cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/btnCancel" android:background="@color/colorPrimary"
            android:textStyle="bold" android:textColor="#FFFFFF" android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp" android:layout_marginRight="20dp"/>
</LinearLayout>